<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.FragmentListArticle">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@color/demo">

                <ImageView
                    android:id="@+id/btn_back_article_detail"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="17dp"
                    android:layout_marginTop="15dp"
                    android:src="@drawable/ic_arrow_back"
                    app:tint="@color/white" />

                <ImageView
                    android:id="@+id/btn_setting_article_detail"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="20dp"
                    android:src="@drawable/settings"
                    app:tint="@color/white" />

            </RelativeLayout>
            <TextView
                android:id="@+id/article_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="This is the title"
                android:textColor="@color/black"
                android:textSize="40sp"
                android:textStyle="bold"
                android:layout_marginStart="10dp"
                android:layout_marginTop="30dp"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:layout_marginStart="10dp">
<!--                <LinearLayout-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:orientation="horizontal">-->
<!--                    <ImageView-->
<!--                        android:layout_width="wrap_content"-->
<!--                        android:layout_height="wrap_content"-->
<!--                        android:src="@drawable/user_up_article"-->
<!--                        app:tint="@color/gray_txt"/>-->
<!--                    <TextView-->
<!--                        android:id="@+id/author"-->
<!--                        android:layout_width="wrap_content"-->
<!--                        android:layout_height="wrap_content"-->
<!--                        android:text="Nguyen Huong"-->
<!--                        android:textSize="17sp"-->
<!--                        android:textColor="@color/gray_txt"/>-->
<!--                </LinearLayout>-->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/article_created_at"
                        app:tint="@color/gray_txt"/>
                    <TextView
                        android:id="@+id/article_created_at"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="13/06/2013"
                        android:textSize="17sp"
                        android:textColor="@color/gray_txt"
                        android:layout_marginStart="10dp"/>
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:id="@+id/main_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="20dp"
                android:text="This is main content\n This is main content\n This is main content\n This is main content"
                android:textSize="20sp"
                android:textColor="@color/black"
                />
        </LinearLayout>
    </ScrollView>
</FrameLayout>