<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.FirstPage">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/top_page"
        android:padding="20dp"
        android:layout_marginTop="20dp">
<!--        <TextView-->
<!--            android:id="@+id/text_first_page"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_marginTop="20dp"-->
<!--            android:fontFamily="@font/bowlby_one"-->
<!--            android:gravity="center"-->
<!--            android:text="Welcome to"-->
<!--            android:textColor="@color/orange"-->
<!--            android:textSize="25sp" />-->

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:src="@drawable/first_page" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/btn_part"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/top_page"
        android:layout_marginTop="50dp"
        android:padding="20dp">

        <Button
            android:id="@+id/btn_login_first_page"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_bg_login"
            android:text="Đăng nhập" />

        <Button
            android:id="@+id/btn_register_first_page"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/btn_login_first_page"
            android:layout_marginTop="20dp"
            android:background="@drawable/btn_bg_register"
            android:text="Đăng ký" />
    </RelativeLayout>

    <TextView
        android:id="@+id/or_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_part"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="hoặc đăng nhâp bằng"
        android:textColor="@color/orange"
        android:textSize="15sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/or_txt"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/facebook_launcher_foreground" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/google_launcher_foreground" />
    </LinearLayout>
</RelativeLayout>